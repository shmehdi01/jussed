<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorBlack">


    <LinearLayout
        android:id="@+id/ll_run"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingVertical="@dimen/_8sdp"
        android:paddingHorizontal="@dimen/_12ssp"
        android:layout_margin="@dimen/_12sdp"
        android:background="@color/colorBlackCard">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Run"
            android:layout_weight="1"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/colorHomeOption"
            android:textSize="@dimen/_12ssp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/_16ssp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingVertical="@dimen/_8sdp"
        android:paddingHorizontal="@dimen/_12ssp"
        android:layout_marginStart="@dimen/_12ssp"
        android:layout_marginEnd="@dimen/_12sdp"
        android:layout_marginBottom="@dimen/_12sdp"
        android:background="@color/colorBlackCard">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Boundary"
            android:layout_weight="1"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/colorHomeOption"
            android:textSize="@dimen/_12ssp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/_16ssp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingVertical="@dimen/_8sdp"
        android:paddingHorizontal="@dimen/_12ssp"
        android:layout_marginStart="@dimen/_12ssp"
        android:layout_marginEnd="@dimen/_12sdp"
        android:layout_marginBottom="@dimen/_12sdp"
        android:background="@color/colorBlackCard">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Six"
            android:layout_weight="1"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/colorHomeOption"
            android:textSize="@dimen/_12ssp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/_16ssp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingVertical="@dimen/_8sdp"
        android:paddingHorizontal="@dimen/_12ssp"
        android:layout_marginStart="@dimen/_12ssp"
        android:layout_marginEnd="@dimen/_12sdp"
        android:layout_marginBottom="@dimen/_12sdp"
        android:background="@color/colorBlackCard">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Century"
            android:layout_weight="1"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/colorHomeOption"
            android:textSize="@dimen/_12ssp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/_16ssp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingVertical="@dimen/_8sdp"
        android:paddingHorizontal="@dimen/_12ssp"
        android:layout_marginStart="@dimen/_12ssp"
        android:layout_marginEnd="@dimen/_12sdp"
        android:layout_marginBottom="@dimen/_12sdp"
        android:background="@color/colorBlackCard">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Half Century"
            android:layout_weight="1"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/colorHomeOption"
            android:textSize="@dimen/_12ssp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="16"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/_16ssp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingVertical="@dimen/_8sdp"
        android:paddingHorizontal="@dimen/_12ssp"
        android:layout_marginStart="@dimen/_12ssp"
        android:layout_marginEnd="@dimen/_12sdp"
        android:layout_marginBottom="@dimen/_12sdp"
        android:background="@color/colorBlackCard">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Dismissal Duck"
            android:layout_weight="1"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/colorHomeOption"
            android:textSize="@dimen/_12ssp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-2"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/_16ssp"/>

    </LinearLayout>


</LinearLayout>