<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_3sdp"
    android:background="@drawable/bg_rounded_card"
    app:cardBackgroundColor="@color/colorBlackCard"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/_8sdp"
        android:paddingBottom="@dimen/_8sdp"
        android:paddingStart="@dimen/_12sdp"
        android:paddingEnd="@dimen/_12sdp">

        <ImageView
            android:id="@+id/iv_team_logo_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toStartOf="@id/iv_vs"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@drawable/kkr_logo"/>

        <ImageView
            android:id="@+id/iv_vs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_12sdp"
            android:layout_marginEnd="@dimen/_12sdp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/iv_team_logo_2"
            app:layout_constraintStart_toEndOf="@id/iv_team_logo_1"
            android:src="@drawable/ic_vs"/>

        <ImageView
            android:id="@+id/iv_team_logo_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/iv_vs"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/kkr_logo"/>

        <TextView
            android:id="@+id/tv_team_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_8ssp"
            android:layout_marginTop="@dimen/_4sdp"
            android:textColor="@color/colorHomeOption"
            app:layout_constraintTop_toBottomOf="@id/iv_team_logo_1"
            app:layout_constraintEnd_toEndOf="@id/iv_team_logo_1"
            app:layout_constraintStart_toStartOf="@id/iv_team_logo_1"
            android:fontFamily="@font/poppins_regular"
            android:text="KKR"/>

        <TextView
            android:id="@+id/tv_team_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_8ssp"
            android:layout_marginTop="@dimen/_4sdp"
            android:textColor="@color/colorHomeOption"
            app:layout_constraintTop_toBottomOf="@id/iv_team_logo_2"
            app:layout_constraintEnd_toEndOf="@id/iv_team_logo_2"
            app:layout_constraintStart_toStartOf="@id/iv_team_logo_2"
            android:fontFamily="@font/poppins_regular"
            android:text="KKR"/>

        <TextView
            android:id="@+id/tv_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_8ssp"
            android:layout_marginTop="@dimen/_4sdp"
            android:textColor="@color/colorRedAccent"
            app:layout_constraintTop_toBottomOf="@id/tv_team_1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:fontFamily="@font/poppins_regular"
            android:text="12h 52m"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>