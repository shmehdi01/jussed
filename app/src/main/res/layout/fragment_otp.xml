<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlack"
    tools:context=".ui.auth.register.OtpFragment">

    <ImageView
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_gravity="bottom"
        android:layout_marginStart="-100dp"
        android:layout_marginBottom="60dp"
        android:alpha="0.3"
        android:src="@drawable/bg_circle_outline" />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="-30dp"
        android:layout_marginBottom="40dp"
        android:alpha="0.3"
        android:backgroundTint="@color/colorBlackCharcoal"
        android:src="@drawable/bg_circle_outline_medium" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginStart="@dimen/_12sdp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="@dimen/_8sdp"
            android:src="@drawable/ic_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_header"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_25sdp"
            android:layout_marginEnd="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_12sdp"
            android:textSize="@dimen/_18ssp"
            app:layout_constraintTop_toBottomOf="@id/iv_back"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textColor="@color/colorWhite"
            android:fontFamily="@font/poppins_regular"
            android:text="Validate your mobile number"/>


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.22" />

        <TextView
            android:id="@+id/tv_enter_otp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_10ssp"
            android:textAlignment="center"
            android:visibility="visible"
            android:layout_marginStart="@dimen/_35sdp"
            android:layout_marginTop="@dimen/_10sdp"
            app:layout_constraintTop_toBottomOf="@id/guide"
            app:layout_constraintStart_toStartOf="parent"
            android:textColor="@color/colorCyanAccent"
            android:fontFamily="@font/poppins_regular"
            android:text="Enter OTP"/>


        <LinearLayout
            android:id="@+id/ll_otp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="@dimen/_8sdp"
            app:layout_constraintTop_toBottomOf="@id/tv_enter_otp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <EditText
                android:id="@+id/et_otp_1"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:fontFamily="@font/montserrat_semibold"
                android:textColor="@color/colorWhite"
                android:hint="0"
                android:maxLength="1"
                android:inputType="number"
                android:textSize="@dimen/_18ssp"
                android:textAlignment="center"
                android:layout_marginEnd="@dimen/_15sdp"
                android:background="@drawable/bg_cyan_rounder"
                android:textColorHint="@color/colorWhite_10"
               />

            <EditText
                android:id="@+id/et_otp_2"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:fontFamily="@font/montserrat_semibold"
                android:textColor="@color/colorWhite"
                android:hint="0"
                android:maxLength="1"
                android:inputType="number"
                android:textSize="@dimen/_18ssp"
                android:textAlignment="center"
                android:layout_marginEnd="@dimen/_15sdp"
                android:background="@drawable/bg_cyan_rounder"
                android:textColorHint="@color/colorWhite_10"
                />

            <EditText
                android:id="@+id/et_otp_3"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:fontFamily="@font/montserrat_semibold"
                android:textColor="@color/colorWhite"
                android:hint="0"
                android:maxLength="1"
                android:inputType="number"
                android:textSize="@dimen/_18ssp"
                android:textAlignment="center"
                android:layout_marginEnd="@dimen/_15sdp"
                android:background="@drawable/bg_cyan_rounder"
                android:textColorHint="@color/colorWhite_10"
                />

            <EditText
                android:id="@+id/et_otp_4"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:fontFamily="@font/montserrat_semibold"
                android:textColor="@color/colorWhite"
                android:hint="0"
                android:maxLength="1"
                android:inputType="number"
                android:textSize="@dimen/_18ssp"
                android:textAlignment="center"
                android:background="@drawable/bg_cyan_rounder"
                android:textColorHint="@color/colorWhite_10"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_already_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_10ssp"
            android:textAlignment="center"
            android:visibility="visible"
            android:layout_marginEnd="@dimen/_35sdp"
            android:layout_marginTop="@dimen/_10sdp"
            app:layout_constraintTop_toBottomOf="@id/ll_otp"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="@color/colorRedAccent"
            android:fontFamily="@font/poppins_regular"
            android:text="Resend OTO 02:00"/>



        <Button
            android:id="@+id/btn_continue"
            android:layout_width="0dp"
            android:layout_marginStart="@dimen/_30sdp"
            android:layout_marginEnd="@dimen/_30sdp"
            android:layout_height="@dimen/dimen_60"
            android:layout_marginBottom="40dp"
            android:background="@drawable/bg_login_btn"
            android:fontFamily="@font/montserrat_bold"
            android:text="Continue"
            android:transitionName="llGoogle"
            android:textAllCaps="false"
            android:backgroundTint="@color/colorGreyDark"
            android:textColor="@color/colorWhite"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>