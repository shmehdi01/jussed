<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/_8sdp"
    android:background="@drawable/bg_rounded_card"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_teams"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_14ssp"
        android:layout_marginEnd="@dimen/_8sdp"
        app:layout_constraintEnd_toStartOf="@id/iv_team_logo_1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/colorGreyLight"
        android:fontFamily="@font/poppins_bold"
        android:text="KKR VS DC"/>


    <TextView
        android:id="@+id/tv_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_8ssp"
        android:layout_marginTop="@dimen/_4sdp"
        android:textColor="@color/colorRedAccent"
        app:layout_constraintTop_toBottomOf="@id/tv_teams"
        app:layout_constraintStart_toStartOf="parent"
        android:fontFamily="@font/poppins_regular"
        android:text="12h 52m"/>


    <ImageView
        android:id="@+id/iv_team_logo_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@id/iv_vs"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@id/tv_teams"
        android:src="@drawable/kkr_logo"/>

    <ImageView
        android:id="@+id/iv_vs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_12sdp"
        android:layout_marginEnd="@dimen/_12sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintEnd_toStartOf="@id/iv_team_logo_2"
        app:layout_constraintStart_toEndOf="@id/iv_team_logo_1"
        android:src="@drawable/ic_vs"/>

    <ImageView
        android:id="@+id/iv_team_logo_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@id/iv_vs"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/kkr_logo"/>

    <TextView
        android:id="@+id/tv_team_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_8ssp"
        android:visibility="gone"
        android:layout_marginTop="@dimen/_4sdp"
        android:textColor="@color/colorHomeOption"
        app:layout_constraintTop_toBottomOf="@id/iv_team_logo_1"
        app:layout_constraintEnd_toEndOf="@id/iv_team_logo_1"
        app:layout_constraintStart_toStartOf="@id/iv_team_logo_1"
        android:fontFamily="@font/poppins_regular"
        android:text="KKR"/>

    <TextView
        android:id="@+id/tv_team_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_8ssp"
        android:visibility="gone"
        android:layout_marginTop="@dimen/_4sdp"
        android:textColor="@color/colorHomeOption"
        app:layout_constraintTop_toBottomOf="@id/iv_team_logo_2"
        app:layout_constraintEnd_toEndOf="@id/iv_team_logo_2"
        app:layout_constraintStart_toStartOf="@id/iv_team_logo_2"
        android:fontFamily="@font/poppins_regular"
        android:text="KKR"/>

</androidx.constraintlayout.widget.ConstraintLayout>